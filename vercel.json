{
  "version": 2,
  "functions": {
    "api/search.js": {
      "maxDuration": 15
    },
    "api/data.js": {
      "maxDuration": 10
    },
    "api/tilok.js": {
      "maxDuration": 10
    },
    "api/index.js": {
      "maxDuration": 5
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers", 
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/search",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=180"
        }
      ]
    },
    {
      "source": "/api/(data|tilok)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=300"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/data",
      "destination": "/api/data.js"
    },
    {
      "source": "/api/tilok", 
      "destination": "/api/tilok.js"
    },
    {
      "source": "/api/search",
      "destination": "/api/search.js"
    },
    {
      "source": "/",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ]
}